<UserControl x:Class="simsProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simsProj"
        mc:Ignorable="d"
        Height="700" Width="1000">
    <Grid Background="#FFE5E5E5">
        <Label Content="Username" HorizontalAlignment="Left" Height="37" Margin="88,61,0,0" VerticalAlignment="Top" Width="102" FontWeight="Bold" FontSize="16"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="35" Margin="88,131,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold" FontSize="16"/>
        <Button Content="Login" Command="{Binding LoginCommand}" HorizontalAlignment="Left" Height="37" Margin="88,204,0,0" VerticalAlignment="Top" Width="102" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="usernameText" HorizontalAlignment="Left" Height="37" Margin="225,61,0,0" TextWrapping="Wrap" Text="{Binding Username,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="138" FontSize="16"/>
        <TextBox x:Name="passwordText" HorizontalAlignment="Left" Height="35" Margin="225,131,0,0" TextWrapping="Wrap" Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="138" FontSize="16"/>

    </Grid>
</UserControl>
